<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <!--  Window  -->
    <SolidColorBrush x:Key="WindowForegroundBrush" po:Freeze="True" Color="#DDFFFFFF" />
    <SolidColorBrush x:Key="WindowBackgroundBrush" po:Freeze="True" Color="#FF303030" />

    <Color x:Key="ValidationErrorColor">#f44336</Color>
    <SolidColorBrush x:Key="ValidationErrorBrush" po:Freeze="True" Color="{StaticResource ValidationErrorColor}" />

    <!--  ProgressBar  -->
    <SolidColorBrush x:Key="ProgressBarHighligthBrush" po:Freeze="True" Color="#0288d1" />
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" po:Freeze="True" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ProgressBarBorderBrush" po:Freeze="True" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ProgressBarTextBrush" po:Freeze="True" Color="#89FFFFFF" />

</ResourceDictionary>