<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <!--  Window  -->
    <SolidColorBrush x:Key="WindowForegroundBrush" po:Freeze="True" Color="Black" />
    <SolidColorBrush x:Key="WindowBackgroundBrush" po:Freeze="True" Color="#F8F9FA" />

    <Color x:Key="ValidationErrorColor">#f44336</Color>
    <SolidColorBrush x:Key="ValidationErrorBrush" po:Freeze="True" Color="{StaticResource ValidationErrorColor}" />

    <!--  ProgressBar  -->
    <SolidColorBrush x:Key="ProgressBarHighlightBrush" po:Freeze="True" Color="#1A73E8" />
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" po:Freeze="True" Color="#FFB9B9B9" />
    <SolidColorBrush x:Key="ProgressBarBorderBrush" po:Freeze="True" Color="#FFCCCCCC" />
    <SolidColorBrush x:Key="ProgressBarTextBrush" po:Freeze="True" Color="Gray" />

</ResourceDictionary>